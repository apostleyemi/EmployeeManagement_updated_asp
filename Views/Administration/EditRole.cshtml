@model EditRoleVIewModel

@{
    ViewBag.Title = "Edit Role";

    int x = 1;
}

<h1>Edit Role</h1>
<div class="card">
    <div class="card-header">
        <span asp-validation-summary="All"></span>
    </div>
   
    <form asp-action="EditRole" asp-controller="Administration" method="post">
        <div class="card-body">
            <div class="form-group  row ">
               <label asp-for="Id" class="col-form-label"></label> 
                 <input asp-for="Id" disabled class="form-control" />

            </div>
            <div class=" row form-group">
                 <label asp-for="RoleName" class="col-form-label"></label>
                 <input asp-for="RoleName" class="form-control" />

            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="submit" class="btn btn-primary">Cancel</button>
        </div>
        
    </form>
    
</div>
<hr />

@if (Model.Users.Any())
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>User Id</th>
                <th>User Name</th>
                <th>City</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@(x++)</td>
                    <td>@user</td>

                </tr>
            }

        </tbody>


    </table>
}
else
{
    <h1>No available user for the selected role</h1>
    <button asp-action="RoleList" asp-controller="Administration" class="btn btn-primary">CLick to go back</button>

}