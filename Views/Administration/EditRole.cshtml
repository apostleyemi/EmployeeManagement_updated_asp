@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";

    int x = 1;
}

<h1>Edit Role</h1>
<div class="card">
    <div class="card-header">

    </div>

    <form asp-action="EditRole" asp-controller="Administration" method="post">
        <div class="card-body">
            <div class="form-group  row ">
                <label asp-for="Id" class="col-form-label"></label>
                <input asp-for="Id" disabled class="form-control" />

            </div>
            <div class=" row form-group">
                <label asp-for="RoleName" class="col-form-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName"></span>

            </div>
        </div>
        <span asp-validation-summary="All" class="text-danger"></span>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListRole" asp-controller="Administration" class="btn btn-primary">Cancel</a>
        </div>

    </form>

</div>
<hr />

@if (Model.Users.Any())
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>User Id</th>
                <th>User Name</th>
                <th>City</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@(x++)</td>
                    <td>@user</td>

                </tr>
            }

        </tbody>


    </table>
}
else
{
    <h1>No available user for the selected role</h1>


}

<a asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" asp-controller="Administration" class="btn btn-primary">Add or Remove User</a>