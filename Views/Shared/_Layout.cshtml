
@inject SignInManager<ApplicationUser> signInManger;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EmployeeManagement</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (signInManger.IsSignedIn(User))
                        {

                            <li class="nav-item offset-8">
                                <form method="post" asp-action="Logout" asp-controller="Account">

                                    <button type="submit" class="btn btn-info btn-sm">Logout<span class="text-dark text-black-50"> @User.Identity.Name</span></button>

                                </form>
                            </li>
                        }

                    </ul>
                   

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            <div class="row">
                <div class="col-md-2">

                    <br />  <br />  <br />
                    <ul class="list-group-item  ml-auto">
                        <li class="list-item">
                            <a class="nav-link text-dark btn btn-outline-primary btn-link" asp-area="" asp-controller="Home" asp-action="Index">View All</a>
                        </li>

                        



                    </ul>

                    <ul class="list-group-item  ml-auto">
                        @if (signInManger.IsSignedIn(User))
                        {

                            <li class="list-item">
                                <a class="nav-link text-dark btn btn-outline-primary btn-link" asp-area="" asp-controller="Administration" asp-action="CreateRole">Crete Role</a>
                            </li>
                            <li class="list-item">
                                <a class="nav-link text-dark btn btn-outline-primary btn-link" asp-area="" asp-controller="Home" asp-action="Create">Create New</a>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-outline-primary btn-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-outline-primary btn-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>


                        }



                    </ul>
                </div>
                <div class="col-md-10">
                    @RenderBody()

                </div>
            </div>


        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - EmployeeManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
